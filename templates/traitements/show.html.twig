{% extends 'suivies/index.html.twig' %}

{% block title %}Traitements{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="text-center">
            <h1>Traitements</h1>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ traitement.id }}</td>
                </tr>
                <tr>
                    <th>Traitement</th>
                    <td>{{ traitement.traitement }}</td>
                </tr>
            </tbody>
        </table>
        <br>
        <a href="{{ path('traitements_index') }}" class="btn btn-primary">Retour</a>
        <br><br>
        <a href="{{ path('traitements_edit', {'id': traitement.id}) }}" class="btn btn-warning">Modifier</a>
        <br><br>
        {{ include('traitements/_delete_form.html.twig') }}
    </div>
{% endblock %}
