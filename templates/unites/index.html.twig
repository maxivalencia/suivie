{% extends 'suivies/index.html.twig' %}

{% block title %}Unites index{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="text-center">
            <h1>Liste des Unites</h1>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Unite</th>
                    <th>Abreviation</th>
                    <th>Localite</th>
                    <th>Mail</th>
                    <th>Phone</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for unite in unites %}
                <tr>
                    <td>{{ unite.id }}</td>
                    <td>{{ unite.unite }}</td>
                    <td>{{ unite.abreviation }}</td>
                    <td>{{ unite.localite }}</td>
                    <td>{{ unite.mail }}</td>
                    <td>{{ unite.phone }}</td>
                    <td>
                        <a href="{{ path('unites_show', {'id': unite.id}) }}" class="btn btn-warning"><i class="fa fa-book" aria-hidden="true"></i></a>
                        <a href="{{ path('unites_edit', {'id': unite.id}) }}" class="btn btn-danger"><i class="fas fa-pencil-alt" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('unites_new') }}" class="btn btn-success">Créer un unité</a>
    </div>
{% endblock %}
