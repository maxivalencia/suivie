{% extends 'base.html.twig' %}

{% block title %}Districts index{% endblock %}

{% block body %}
    <h1>Districts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>District</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for district in districts %}
            <tr>
                <td>{{ district.id }}</td>
                <td>{{ district.district }}</td>
                <td>
                    <a href="{{ path('districts_show', {'id': district.id}) }}">show</a>
                    <a href="{{ path('districts_edit', {'id': district.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('districts_new') }}">Create new</a>
{% endblock %}
