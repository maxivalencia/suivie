{% extends 'suivies/index.html.twig' %}

{% block title %}Districts index{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="text-center">
            <h1>Listes des Districts</h1>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>District</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for district in districts %}
                <tr>
                    <td>{{ district.id }}</td>
                    <td>{{ district.district }}</td>
                    <td>
                        <a href="{{ path('districts_show', {'id': district.id}) }}" class="btn btn-warning"><i class="fa fa-book" aria-hidden="true"></i></a>
                        <a href="{{ path('districts_edit', {'id': district.id}) }}" class="btn btn-danger"><i class="fas fa-pencil-alt" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('districts_new') }}" class="btn btn-success">Créer un district</a>
    </div>
{% endblock %}
