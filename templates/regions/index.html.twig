{% extends 'suivies/index.html.twig' %}

{% block title %}Regions index{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="text-center">
            <h1>Regions index</h1>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Region</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for region in regions %}
                <tr>
                    <td>{{ region.id }}</td>
                    <td>{{ region.region }}</td>
                    <td>
                        <a href="{{ path('regions_show', {'id': region.id}) }}" class="btn btn-warning"><i class="fa fa-book" aria-hidden="true"></i></a>
                        <a href="{{ path('regions_edit', {'id': region.id}) }}" class="btn btn-danger"><i class="fas fa-pencil-alt" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('regions_new') }}" class="btn btn-success">Créer une région</a>
    </div>
{% endblock %}
