{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-3 col-md-3 col-lg-3 col-xl-3">
            <!--img src="/dist/images/header.png" class="img-fluid" alt="Image en-tête de la DGSR"-->
        </div>
        <div class="col-9 col-md-9 col-lg-9 col-xl-9">
            <div class="font-weight-normal justify-content-center align-items-center text-center" style="font-size:30px;">Direction Général de la sécurité routière</div>
            <div class="text-right"><a href="{{ path('app_logout') }}" type="button" class="btn btn-light"> <i class="fas fa-sign-out-alt"></i> </a></div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 col-md-3 col-lg-3 col-xl-3">
            <div class="vertical-menu">
                <a href="{{ path('suivies') }}" class="active">Tableau de bord : {{ app.user.username }}</a>
                <a href="{{ path('dossiers_creation') }}"> Création dossier </a>
                <a href="{{ path('dossiers_non') }}"> Non récue (<span id="non">0</span>)</a>
                <a href="{{ path('dossiers_cours') }}"> En cours</a>
                <a href="{{ path('dossiers_miandry') }}"> En attente </a>
                <a href="{{ path('dossiers_vita') }}"> Terminer </a>
                <a href="{{ path('sous_unite') }}"> Sous-Unité </a>
                {# <a href="#"> Statistique </a> #}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('dossiers_index') }}"> Historique </a>
                    <a href="{{ path('user_index') }}"> Utilisateur </a>
                    <a href="{{ path('unites_index') }}"> Unité </a>
                    <a href="{{ path('type_dossiers_index') }}"> Type de dossiers </a>
                    <a href="{{ path('resultats_index') }}"> Resultat </a>
                    <a href="{{ path('traitements_index') }}"> Traitement </a>
                    <!--a href="#"> Role </a-->
                    <a href="{{ path('communes_index') }}"> Commune </a>                       
                    <a href="{{ path('districts_index') }}"> District </a>                         
                    <a href="{{ path('regions_index') }}"> Region </a>                        
                    <a href="{{ path('provinces_index') }}"> Province </a>
                {% endif %}
                <!--<a href="{#{{ path('app_logout') }}#}"><span class="fa fa-sign-out"></span> Déconnexion</a>-->
            </div>
        </div>
        <div class="col-9 col-md-9 col-lg-9 col-xl-9">
            <div class="row">
                {% block contenue %}
                    <div class="container">
                        <div class="text-center">
                            <h1>Tableau de Bord</h1>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-4 col-md-4 col-lg-4 col-xl-4 text-center" style="background-color: hsl(14, 100%, 53%);">
                                <strong>nombre de dossier non recue <br> {{ non_recue }}</strong>
                            </div>
                            <div class="col-4 col-md-4 col-lg-4 col-xl-4 offset-md-2 offset-2 offset-lg-2 offset-xl-2 text-center" style="background-color:red;">
                                <strong>nombre de dossier en cours de traitement <br> {{ en_cours }}</strong>
                            </div>
                        </div>
                        <br><br>
                        <div class="row">
                            <div class="col-4 col-md-4 col-lg-4 col-xl-4 text-center" style="background-color: rgba(50, 115, 220, 0.3);">
                                <strong>nombre de dossier en attente <br>{{ en_attente }}</strong>
                            </div>
                            <div class="col-4 col-md-4 col-lg-4 col-xl-4 offset-md-2 offset-2 offset-lg-2 text-center" style="background-color: #05ffb0;">
                                <strong>nombre de dossier terminer <br>{{ terminer }}</strong>
                            </div>
                        </div>
                        <br><br>
                        {# <div class="row">
                            <div class="col-4 col-md-4 col-lg-4 col-xl-4 text-center" style="background-color: rgb(50, 115, 220);">
                                <strong>nombre d'unité sous tutelle <br>{{ sous_unite }}</strong>
                            </div>
                        </div> #}            
                    </div>
                {% endblock %}</div>
        </div>
    </div>
    <hr>
    <div class="row justify-content-center align-items-center text-center">
        <span>ANDRIANTSOA Husayn Mozart (DGSR/SIT)</span>
    </div>
    <div class="row justify-content-center align-items-center text-center">
        <span>Copyright © 2019 DGSR.</span>
    </div>
</div>
<input name="notif_non" id="notif_non" type="hidden" value='{{ path('notif_non') }}'>
{% endblock %}
